{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "allowJs": true
  },
  "include": [
    "src/server.ts",
    "src/config/**/*.ts",
    "src/routes/**/*.ts",
    "src/services/**/*.ts",
    "src/services/**/*.js",
    "src/utils/**/*.ts",
    "src/validators/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/frontend/**/*"
  ]
}
