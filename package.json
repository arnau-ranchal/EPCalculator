{
  "name": "epcalculator-v2",
  "version": "2.0.16",
  "description": "EPCalculator - Kubernetes-Native Transmission System Analysis Tool",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "build": "npm run build:wasm && npm run build:frontend && npm run build:backend",
    "build:wasm": "./scripts/build-wasm.sh",
    "build:frontend": "vite build",
    "build:backend": "tsc",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "NODE_ENV=development tsx watch src/server.ts",
    "dev:backend:legacy": "node server/simple-server-working.js",
    "dev:frontend": "vite",
    "start": "node dist/server.js",
    "test": "vitest",
    "lint": "eslint src --ext .ts,.js,.svelte",
    "format": "prettier --write src",
    "health-check": "curl -f http://localhost:8000/health || exit 1",
    "capture-screenshots": "node scripts/capture-screenshots.cjs",
    "update-tutorial-images": "npm run capture-screenshots"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/static": "^7.0.4",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^4.0.1",
    "@observablehq/plot": "^0.6.11",
    "@sinclair/typebox": "^0.32.35",
    "argon2": "^0.31.2",
    "better-sqlite3": "^9.4.3",
    "d3": "^7.8.5",
    "fastify": "^4.26.2",
    "ffi-napi": "^4.0.3",
    "html2canvas": "^1.4.1",
    "katex": "^0.16.27",
    "pino": "^8.19.0",
    "pino-pretty": "^11.0.0",
    "plotly.js-dist-min": "^3.2.0",
    "ref-napi": "^3.0.3",
    "svelte-i18n": "^4.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-svelte": "^2.35.1",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "svelte": "^4.2.12",
    "terser": "^5.44.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vite": "^5.1.6",
    "vitest": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arnau-ranchal/EPCalculator"
  },
  "keywords": [
    "transmission-systems",
    "error-probability",
    "digital-communications",
    "kubernetes",
    "webassembly",
    "research-tool"
  ],
  "authors": [
    "Andreu Gordillo Vázquez",
    "Alba Soldevila González",
    "Arnau Ranchal Marín"
  ],
  "license": "MIT"
}
